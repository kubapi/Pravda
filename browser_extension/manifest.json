{
    "manifest_version": 2,
    "name": "Pravda's Accio",
    "version": "0.1",
    "description": "Pravda's Accio tool for data collection.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {                    
            "16": "images/icon16.png",           
            "48": "images/icon48.png",           
            "128": "images/icon128.png"           
        },
        "default_title": "Pravda's Accio",
        
        "default_popup": "popups/default_popup.html"
    },
    
    "icons": {                    
        "16": "images/icon16.png",           
        "48": "images/icon48.png",           
        "128": "images/icon128.png"            
    }
}

